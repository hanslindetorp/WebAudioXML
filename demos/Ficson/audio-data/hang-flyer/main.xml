<?xml version="1.0" encoding="UTF-8"?>
<Audio version="1.0" timeUnit="ms">

    <var name="gain" value="$engine1_gain" default="0.1"></var>
    <var name="LFO" value="$speed" mapin="0,1" mapout="2,20" default="10"></var>
    <var name="LFO_gain"></var>
    <!-- <var name="filter" value="$bandpass_frequency"></var>
    <var name="Q" mapin="0,50" mapout="0,50"></var> -->

    <Chain class="noise" gain="$gain">
        <Chain output="#gyro-modulator">
            <OscillatorNode type="sine" frequency="$LFO"></OscillatorNode>
            <GainNode gain="$LFO_gain"></GainNode>
        </Chain>   

        <AudioWorkletNode src="white-noise-processor.js"></AudioWorkletNode>
        <GainNode>
            <gain id="gyro-modulator"></gain>
        </GainNode>
        
        <BiquadFilterNode type="bandpass" frequency="$bandpass_frequency" Q="$bandpass_Q"></BiquadFilterNode>
    </Chain>

</Audio>