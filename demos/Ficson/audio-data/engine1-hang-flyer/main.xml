<?xml version="1.0" encoding="UTF-8"?>
<Audio version="1.0" timeUnit="ms">

    <var name="engine_gain" mapin="0,1" default="0.5"></var>
    <var name="LFO" value="$speed1" mapin="0,1" mapout="10,25" default="10"></var>
    <var name="LFO_gain"></var>
    <var name="bandpass_frequency" value="$speed1" mapin="0,1" mapout="60,90" convert="MIDI->frequency"></var>

    <var name="Q" mapin="0,50" default="20"></var>

    <Chain gain="$engine_gain">
        <Chain output="#gyro-modulator">
            <OscillatorNode type="triangle" frequency="$LFO"></OscillatorNode>
            <GainNode gain="$LFO_gain"></GainNode>
        </Chain>   

        <GainNode class="engine1 white-noise"></GainNode>
        <GainNode>
            <gain id="gyro-modulator"></gain>
        </GainNode>
        
        <BiquadFilterNode type="bandpass" frequency="$bandpass_frequency" Q="$Q"></BiquadFilterNode>
    </Chain>

</Audio>