<?xml version="1.0" encoding="UTF-8"?>
<Audio version="1.0" controls="true" timeUnit="ms" gain="0dB" xmlns:xi="http://www.w3.org/2001/XInclude">

    <var name="x" value="$x2" default="0.5"></var>
    <var name="y" value="$y2" default="0.5"></var>

    <var name="onX" value="$y" mapin="0,0.5,1" mapout="0,1,0" curve="EaseOut, EaseIn"></var>
    <var name="onY" value="$x" mapin="0,0.5,1" mapout="0,1,0" curve="EaseOut, EaseIn"></var>

    <var name="speed" value="$speed2"></var>

    <var name="bandpass_frequency" value="$speed" mapin="0,1" mapout="90,114" convert="MIDI->frequency"></var>
    <var name="bandpass_Q" mapin="0,50" default="20"></var>

    <var name="gain" value="$gain2"></var>
    <var name="pan" value="$pan2"></var>


    <Mixer id="vehicle2" output=".channel">

        <var name="root" mapin="48, 72" steps="0,1" default="65"></var>

        <xi:include href="engine2-wheel-chair/main.xml" />
        
        <Chain gain="1-($onX*$onY)">
            <Mixer>

                <!-- GENERATOR 1 -->
                <Chain class="generator1">
                    <var name="chunklength" mapin="0,5000" default="280"></var>
                    <var name="chunkvariation" mapin="0,5000" default="100"></var>
                    <var name="transition" mapin="0,5000" default="100"></var>
                    <var name="min_pitch" mapin="36,72" default="64" convert="MIDI->frequency" step="0,2, 4, 5, 7, 9, 11, 12"></var>
                    <var name="max_pitch" mapin="48,128" default="88" convert="MIDI->frequency" step="0,2, 4, 5, 7, 9, 11, 12"></var>

                    
                    <var name="gain" value="(1-$y)*$onY" curve="EaseOut"></var>
                    <xi:include href="generator1/main.xml" />
                    <Send output=".filter3"></Send>
                    <GainNode gain="$gain"></GainNode>

                    <BiquadFilterNode type="bandpass" frequency="$bandpass_frequency" Q="$bandpass_Q"></BiquadFilterNode>
                    
                </Chain>

                <!-- GENERATOR 2 -->
                <Chain class="generator2">
                    <var name="bandpass_frequency" value="$speed" mapin="0,1" mapout="70,94" convert="MIDI->frequency"></var>
                    <var name="bandpass_Q" mapin="0,500" default="50"></var>
                    <var name="lowpass" mapin="100,10000" default="2000"></var>

                    <var name="attack" mapin="1,100" default="10"></var>
                    <var name="decay" mapin="1,200" default="20"></var>
                    <var name="delay" mapin="1,200" default="73"></var>
                    <var name="loopLength" mapin="10,1000" default="236"></var>

                    <var name="gain" value="$x*$onX" curve="EaseOut"></var>

                    <xi:include href="generator2/main.xml" />

                    <BiquadFilterNode type="bandpass" frequency="$bandpass_frequency" Q="$bandpass_Q"></BiquadFilterNode>
                    <BiquadFilterNode type="lowpass" frequency="$lowpass"></BiquadFilterNode>

                </Chain>

                <!-- GENERATOR 3 -->
                <Chain class="generator3">
                    <var name="bandpass_frequency" value="$speed" mapin="0,1" mapout="70,94" convert="MIDI->frequency"></var>
                    <var name="bandpass_Q" mapin="0,50" default="10"></var>

                    <var name="gain" value="$y*$onY" curve="EaseOut"></var>
                    <xi:include href="generator3/main.xml" />
                    <BiquadFilterNode type="bandpass" frequency="$bandpass_frequency" Q="$bandpass_Q"></BiquadFilterNode>
                    
                </Chain>

                <!-- GENERATOR 4 -->
                <Chain class="generator4">
                    <var name="bandpass_frequency" value="$speed" mapin="0,1" mapout="70,94" convert="MIDI->frequency"></var>
                    <!-- <var name="bandpass_Q" mapin="0,50" default="40"></var> -->
                    <var name="bandpass_Q" value="Math.sqrt($bandpass_frequency)*4"></var>

                    <var name="attack" mapin="1,100" default="20"></var>
                    <var name="decay" mapin="1,200" default="8"></var>
                    <var name="repeat" mapin="100,10000" default="500"></var>

                    <var name="lowpass" mapin="100,5000" default="1000"></var>
                    
                    <var name="gain" value="(1-$x)*$onX" curve="EaseOut"></var>
                    <xi:include href="generator4/main.xml" />
                </Chain>
            </Mixer>


            <Send output=".reverb" gain="$onX*$onY*8"></Send>
        </Chain>

        <Chain>
            <ConvolverNode class="reverb" src="white_noise_2.wav"></ConvolverNode>
            
            <BiquadFilterNode 
                type="bandpass" 
                frequency="$bandpass_frequency" 
                Q="$bandpass_Q"
            ></BiquadFilterNode>
        </Chain>
        

    </Mixer>
    
    

    <Chain class="channel">
        <GainNode gain="$gain"></GainNode>
        <ObjectBasedAudio positionZ="-5" positionX="$pan"></ObjectBasedAudio>
    </Chain>

</Audio>